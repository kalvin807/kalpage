---
import '../styles/global.css';
import PaintingPixels from '../components/PaintingPixels.astro';
---

<!doctype html>
<html lang="en" class="min-h-full" style="color-scheme: dark">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&family=Space+Mono&display=swap"
      rel="stylesheet"
    />
    <title>Kal.L - Software Engineer in Tokyo, Japan</title>
    <meta name="robots" content="follow, index" />
    <meta name="description" content="Software engineer in Tokyo, Japan. Welcome to my portfolio showcasing recent works, projects, and thoughts on software development." />
    <meta name="keywords" content="software engineer, developer, Tokyo, Japan, portfolio, web development, programming" />
    <meta name="author" content="Kal.L" />
    <link rel="canonical" href="https://kalvin.io" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kalvin.io" />
    <meta property="og:title" content="Kal.L - Software Engineer in Tokyo, Japan" />
    <meta property="og:description" content="Software engineer in Tokyo, Japan. Welcome to my portfolio showcasing recent works, projects, and thoughts on software development." />
    <meta property="og:image" content="https://kalvin.io/doggo.png" />
    <meta property="og:image:alt" content="Kal.L's avatar" />
    <meta property="og:site_name" content="Kal.L Portfolio" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://kalvin.io" />
    <meta property="twitter:title" content="Kal.L - Software Engineer in Tokyo, Japan" />
    <meta property="twitter:description" content="Software engineer in Tokyo, Japan. Welcome to my portfolio showcasing recent works, projects, and thoughts on software development." />
    <meta property="twitter:image" content="https://kalvin.io/doggo.png" />
    <meta property="twitter:image:alt" content="Kal.L's avatar" />

    <meta name="theme-color" content="#131211" />
    <meta name="msapplication-TileColor" content="#131211" />
  </head>
  <body>
    <!-- Main content -->
    <main class="mx-auto max-w-[1200px] px-6 py-8 xl:grid xl:grid-cols-[1fr_420px] xl:gap-12">
      <div class="max-w-3xl">
        <slot />
      </div>
      <aside class="mt-8 xl:mt-0 xl:sticky xl:top-1/2 xl:-translate-y-1/2 xl:self-start">
        <PaintingPixels server:defer>
          <div slot="fallback">
            <div class="painting-skeleton"></div>
            <div class="painting-info">
              <span class="painting-pixels-loading-text">Loading a paintingâ€¦</span>
            </div>
          </div>
        </PaintingPixels>
      </aside>
    </main>

    <!-- Footer -->
    <footer class="relative z-1 border-t border-accent-10 py-6 text-center">
      <div class="mx-auto max-w-[1200px] px-6">
        <p class="font-mono text-xs text-text opacity-50 m-0">Kal.L &copy; 2025</p>
      </div>
    </footer>

    <!-- Glow card pointer tracking -->
    <script>
      import '../scripts/glow.ts';
    </script>
  </body>
</html>
