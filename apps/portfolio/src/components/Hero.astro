---
interface Props {
  avatar: string;
  heading: string;
  tagline: string;
}

const { avatar, heading, tagline } = Astro.props;
---

<section class="relative z-1 pt-8 pb-12">
  <div class="mb-5 flex flex-col items-start gap-4 sm:flex-row sm:items-center">
    <img src={avatar} alt="Kal's avatar" width="96" height="96" decoding="async" class="size-24 rounded-full object-cover border-2 border-accent-50 shadow-[0_0_40px_var(--color-glow-shadow)]" />
    <div class="flex flex-wrap gap-2">
      <span class="border border-accent-30 bg-surface-soft px-2 py-1 font-mono text-xs uppercase tracking-wide text-text-heading">Tokyo, Japan</span>
      <span class="border border-accent-30 bg-surface-soft px-2 py-1 font-mono text-xs uppercase tracking-wide text-text-muted">AI Agents · Voice · Web</span>
    </div>
  </div>
  <h1 class="hero-heading">{heading}</h1>
  <p class="mt-3 text-lg text-text leading-relaxed max-w-[40ch]">{tagline}</p>
  <div class="mt-4 flex flex-wrap gap-2.5">
    <a href="https://github.com/kalvin807" class="inline-flex items-center gap-2 border border-accent-30 bg-surface-raised px-3 py-1.5 font-mono text-xs uppercase tracking-wide text-text-heading no-underline transition-colors hover:border-accent hover:bg-surface-raised-hover" aria-label="Open GitHub profile">
      <svg class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" /><path d="M9 18c-4.51 2-5-2-7-2" /></svg>
      <span>GitHub</span>
    </a>
    <a href="mailto:6q4zz1i46@relay.firefox.com" class="inline-flex items-center gap-2 border border-accent-30 bg-surface-raised px-3 py-1.5 font-mono text-xs uppercase tracking-wide text-text no-underline transition-colors hover:border-accent hover:bg-surface-raised-hover" aria-label="Send email">
      <svg class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect width="20" height="16" x="2" y="4" rx="2" /><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" /></svg>
      <span>Email</span>
    </a>
  </div>
</section>
