---
interface Props {
  label: string;
  skills: string[];
}

const { label, skills } = Astro.props;
---

<div class="mb-6">
  <p class="mb-2.5 font-mono text-[0.7rem] uppercase tracking-[0.1em] text-accent">{label}</p>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="border border-accent-30 bg-surface-chip px-3 py-1.5 font-mono text-xs text-text transition-colors hover:border-accent hover:bg-surface-chip-hover">{skill}</span>
    ))}
  </div>
</div>
