---
interface Props {
  title: string;
  date: string;
}

const { title, date } = Astro.props;
---

<div class="timeline-item pb-6 last:pb-0">
  <article class="border border-accent-30 bg-bg-card p-4">
    <span class="mb-2 inline-block border border-accent-30 px-2 py-0.5 font-mono text-xs uppercase tracking-wide text-accent">{date}</span>
    <h3 class="font-heading text-base font-semibold text-text-heading m-0 mb-1">{title}</h3>
    <div class="timeline-desc text-[0.9rem] text-text leading-relaxed">
      <slot />
    </div>
  </article>
</div>
