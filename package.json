{
	"name": "kalpage-monorepo",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"workspaces": ["apps/*"],
	"scripts": {
		"dev:portfolio": "bun --filter portfolio dev",
		"dev:home": "bun --filter home dev",
		"dev:all": "bun --filter portfolio dev & bun --filter home dev",
		"build:portfolio": "bun --filter portfolio build",
		"build:home": "bun --filter home build",
		"build:all": "bun --filter portfolio build && bun --filter home build",
		"preview:portfolio": "bun --filter portfolio preview",
		"test:home": "bun --filter home test",
		"check:portfolio": "bun --filter portfolio check",
		"check:watch:portfolio": "bun --filter portfolio check:watch",
		"lint:portfolio": "bun --filter portfolio lint",
		"format:portfolio": "bun --filter portfolio format",
		"clean": "rm -rf apps/*/node_modules apps/*/.svelte-kit apps/*/dist apps/*/.tanstack"
	},
	"packageManager": "bun@1.2.15"
}
